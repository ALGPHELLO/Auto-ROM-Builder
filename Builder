# Install build tools
sudo apt-get install -y lzop git git-core gnupg flex bison gperf build-essential zip curl lib32z1-dev libncurses5-dev libgl1-mesa-dri-lts-utopic libglapi-mesa-lts-utopic zlib1g-dev gcc-multilib g++-multilib libc6-dev libc6-dev-i386 lib32bz2-1.0 lib32ncurses5-dev libreadline6-dev x11proto-core-dev libx11-dev lib32z-dev ccache libgl1-mesa-dev libxml2-utils xsltproc unzip maven automake python-networkx bzip2 libbz2-dev libbz2-1.0 libghc-bzlib-dev libgl1-mesa-dev-lts-utopic squashfs-tools pngcrush dpkg-dev liblz4-tool make schedtool optipng mingw32 tofrodos python-markdown lib32readline-gplv2-dev lib32bz2-dev
# Install Java
sudo add-apt-repository ppa:openjdk-r/ppa && sudo apt-get update && sudo apt-get install openjdk-7-jdk
# Install repo
sudo ln -s /usr/lib/i386-linux-gnu/mesa/libGL.so.1 /usr/lib/i386-linux-gnu/libGL.so
mkdir ~/bin && curl http://commondatastorage.googleapis.com/git-repo-downloads/repo > ~/bin/repo && chmod a+x ~/bin/repo
echo "export USE_CCACHE=1" >> ~/.bashrc
echo "export PATH=~/bin:$PATH" >> ~/.bashrc
source ~/.bashrc
# Perpairing source
mkdir ~/android && cd ~/android
# ROM Repo
repo init -u git://github.com/SlimRoms/platform_manifest.git -b kk4.4
# Local Manifests
curl -L -o .repo/local_manifests/normandykk.xml -O -L https://github.com/yshalsager/CircleCI-ROM-Builder/raw/master/normandykk.xml
repo sync
. build/envsetup.sh
brunch xl
